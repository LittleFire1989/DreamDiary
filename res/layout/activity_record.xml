<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	   	<RadioGroup
	   	    android:id="@+id/dreamRecordTab"
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="30dp"
	   	    android:layout_gravity="bottom"
	   	    android:layout_weight="0.02"
	   	    android:background="#000000"
	   	    android:orientation="horizontal" >

	   	    <ImageView
	   	        android:id="@+id/saveImageView"
	   	        android:layout_width="24dp"
	   	        android:layout_height="match_parent"
	   	        android:contentDescription="@string/save_dream"
	   	        android:src="@drawable/save" />

	   	    <ImageView
	   	        android:id="@+id/voiceRecordImageView"
	   	        android:layout_width="23dp"
	   	        android:layout_height="match_parent"
	   	        android:layout_marginLeft="150dip"
	   	        android:layout_weight="0.04"
	   	        android:contentDescription="@string/voice_record"
	   	        android:src="@drawable/voice_record" />

	   	    <ImageView
	   	        android:id="@+id/addPhotoImageView"
	   	        android:layout_width="29dp"
	   	        android:layout_height="29dp"
	   	        android:layout_marginLeft="10dip"
	   	        android:contentDescription="@string/add_photo"
	   	        android:src="@drawable/add_photo" />

	   	    <ImageView
	   	        android:id="@+id/addLocationImageView"
	   	        android:layout_width="29dp"
	   	        android:layout_height="29dp"
	   	        android:layout_marginLeft="10dip"
	   	        android:contentDescription="@string/add_photo"
	   	        android:src="@drawable/location_place" />

	   	    <ImageView
	   	        android:id="@+id/moreOptionImageView"
	   	        android:layout_width="29dp"
	   	        android:layout_height="29dp"
	   	        android:layout_marginLeft="10dip"
	   	        android:contentDescription="@string/more_option"
	   	        android:src="@drawable/more_option" />
	   	</RadioGroup>

    <FrameLayout 
    	android:id="@android:id/tabcontent"
    	android:layout_width="fill_parent"
    	android:layout_height="0.0dip"
    	android:layout_weight="1.0"
    	android:background="@drawable/recorddiary_background6">

        <EditText
            android:id="@+id/dreamRecordEditText"
            android:layout_width="match_parent"
            android:layout_height="431dp"
            android:ems="500"
            android:gravity="center_vertical|top"
            android:hint="I dreamed..."
            android:textSize="14dp" />
	   	    
	</FrameLayout>
    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.0"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/dreamRecordTab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/amsu_menu_toolbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_button1"
            style="@style/main_tab_bottom"
            android:layout_marginTop="1.0dip"
            android:drawableTop="@drawable/logo_ss"
            android:text="@string/dream_diary" />

        <RadioButton
            android:id="@+id/radio_button2"
            style="@style/main_tab_bottom"
            android:layout_marginTop="1.0dip"
            android:drawableTop="@drawable/amsu_menu_search"
            android:text="@string/dream_explore" />

        <RadioButton
            android:id="@+id/radio_button3"
            style="@style/main_tab_bottom"
            android:layout_marginTop="1.0dip"
            android:drawableTop="@drawable/amsu_menu_user"
            android:text="@string/dream_about_me" />
    </RadioGroup>

</LinearLayout>