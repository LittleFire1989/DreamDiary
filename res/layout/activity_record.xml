<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/login_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done_button"
                android:textColor="#F8F8FF"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/optionImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="152.0dip"
                android:layout_weight="0.06"
                android:clickable="true"
                android:drawable="@drawable/option" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0px"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/normalRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/normal_radioButton"
                android:textColor="#F8F8FF" />

            <RadioButton
                android:id="@+id/halfLucidRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Half_lucid_radioButton"
                android:textColor="#F8F8FF" />

            <RadioButton
                android:id="@+id/lucidRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dip"
                android:text="@string/lucid_radioButton"
                android:textColor="#F8F8FF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0px"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/dreamRecordImageButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:src="@drawable/record"
                android:text="@string/dream_record" />

            <Chronometer
                android:id="@+id/chronometer1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.66" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawable="@drawable/login_back"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/dreamRecordImageButton"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:ems="400" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.0"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>